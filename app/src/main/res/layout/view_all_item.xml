<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="15dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvserviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textColor="#182A34"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/ivImage"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvServiceDeatails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#36474F"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvserviceName"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/btnBookAppointment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvServiceDeatails"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="11dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="Book An Appointment"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="8dp"
            android:drawableStart="@drawable/book"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF6244"
            android:background="@drawable/search_box"
            />

        <TextView
            android:id="@+id/tvEnquire"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="Enquire Now"
            android:drawableStart="@drawable/enquiry"
            android:drawablePadding="5dp"
            android:paddingHorizontal="15dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintTop_toBottomOf="@id/tvServiceDeatails"
            android:gravity="center"
            android:background="@drawable/search_box"
            android:backgroundTint="@color/color_primary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>