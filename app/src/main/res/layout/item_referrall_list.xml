<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="2dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:background="@color/back_ground_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:srcCompat="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/tvNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        android:text="Name: "
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvNameTitle"
        app:layout_constraintTop_toTopOf="@id/imageView"
        android:text="SHRABANI"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvNameTitle"
        app:layout_constraintTop_toBottomOf="@id/tvNameTitle"
        android:text="Email: "
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvEmailTitle"
        app:layout_constraintTop_toTopOf="@id/tvEmailTitle"
        android:text="shrabani2gmail.com"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvPhoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvNameTitle"
        app:layout_constraintTop_toBottomOf="@id/tvEmailTitle"
        android:text="Mobile No.: "
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvPhoneTitle"
        app:layout_constraintTop_toTopOf="@id/tvPhoneTitle"
        android:text="4568798097"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        />

        <TextView
            android:id="@+id/tvSubscriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvNameTitle"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneTitle"
            android:text="Subscription Name: "
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSubscriptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvSubscriptionTitle"
            app:layout_constraintTop_toTopOf="@id/tvSubscriptionTitle"
            android:text="4568798097"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvActiveTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvNameTitle"
            app:layout_constraintTop_toBottomOf="@id/tvSubscriptionTitle"
            android:text="Active Date: "
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvActiveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvActiveTitle"
            app:layout_constraintTop_toTopOf="@id/tvActiveTitle"
            android:text="4568798097"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvExpiryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvNameTitle"
            app:layout_constraintTop_toBottomOf="@id/tvActiveTitle"
            android:text="Expiry Date: "
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvActiveTitle"
            app:layout_constraintTop_toTopOf="@id/tvExpiryTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:text="4568798097"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>