<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/crmContainer"
    android:layout_height="match_parent"
    android:background="@color/back_ground_color"
    tools:context=".AddCustomerActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Customer"
            android:textColor="@color/white"
            android:layout_marginStart="40dp"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#36474F"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"/>

    <EditText
        android:id="@+id/etNameSelect"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:gravity="start|center"
        android:textSize="18sp"
        android:textColor="#6F7882"
        android:background="@drawable/otp_box_background"
        android:hint="|"
        />

    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etNameSelect"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Mobile Number"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#36474F"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"/>

    <EditText
        android:id="@+id/etMobileNo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvMobile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:maxLength="10"
        android:inputType="number"
        android:gravity="start|center"
        android:textSize="18sp"
        android:textColor="#6F7882"
        android:background="@drawable/otp_box_background"
        android:hint="|"
        />

    <TextView
        android:id="@+id/tvEmailID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etMobileNo"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#36474F"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"/>

    <EditText
        android:id="@+id/etEmailIDSelect"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmailID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:gravity="start|center"
        android:textSize="18sp"
        android:textColor="#6F7882"
        android:inputType="textEmailAddress"
        android:hint="|"
        android:background="@drawable/otp_box_background"
        />

    <TextView
        android:id="@+id/tvDob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEmailIDSelect"
        app:layout_constraintStart_toStartOf="parent"
        android:text="D.O.B."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#36474F"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"/>

    <EditText
        android:id="@+id/etDobSelect"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvDob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:gravity="start|center"
        android:textSize="18sp"
        android:textColor="#6F7882"
        android:hint="DD/MM/YY"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/baseline_calendar_month_24"
        android:drawableTint="@color/red"
        android:background="@drawable/otp_box_background"
        />

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etDobSelect"
        app:layout_constraintStart_toStartOf="parent"
        android:text="City"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#36474F"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"/>

    <EditText
        android:id="@+id/etCitySelect"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvCity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:gravity="start|center"
        android:textSize="18sp"
        android:textColor="#6F7882"
        android:hint="|"
        android:maxLines="1"
        android:background="@drawable/otp_box_background"
        />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etCitySelect"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Address"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#36474F"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"/>

    <EditText
        android:id="@+id/etAddressSelect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="#6F7882"
        android:hint="|"
        android:background="@drawable/otp_box_background"
        />

    <TextView
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:textSize="18sp"
        android:text="Add Now"
        android:padding="14dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/red"
        android:background="@drawable/edit_text_background_box"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>